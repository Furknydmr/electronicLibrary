<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".PersonelKitapBilgileri">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/baseline_menu"
            android:importantForAccessibility="no" />

    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="KİTAP BİLGİLERİ"
        android:paddingStart="40dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="20sp"
        tools:ignore="RtlSymmetry" />


    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_weight="1"
        app:cardCornerRadius="30dp"


        >

        <!-- Card içeriği buraya eklenir -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kitabin_adi"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtKitapAdi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/kitabin_adi"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yayin_evi"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtYayinevi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/yayin_evi"
                android:importantForAutofill="no"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize,DuplicateSpeakableTextCheck"
                android:inputType="text" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kitabin_yazari"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtKitabinYazari"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/kitabin_yazari"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/basim_tarihi"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtBasimTarihi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/basim_tarihi"
                android:importantForAutofill="no"
                android:inputType="datetime"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kitap_turu"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtKitapTuru"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/kitap_turu"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kitap_raf_yeri"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtKitapRafYeri"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/kitap_raf_yeri"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adet"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtKitapAdet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/kitap_barkodu"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kitap_barkodu"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtKitapBarkodu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/kitap_barkodu"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnOduncVer"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/koyuBej"
                    android:text="Ödünç Ver"
                    android:textColor="@color/white"
                    tools:ignore="VisualLintButtonSize">

                </Button>
                <Button
                    android:id="@+id/btnOduncAlanlar"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@color/koyuBej"
                    android:text="Ödünç Alanlar"
                    android:textColor="@color/white"
                    tools:ignore="VisualLintButtonSize">

                </Button>
                <Button
                    android:id="@+id/btnKitapSil"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@color/koyuBej"
                    android:text="Kitabı Sil"
                    android:textColor="@color/white"
                    tools:ignore="VisualLintButtonSize">

                </Button>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:baselineAligned="false"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">


                <ImageView
                    android:id="@+id/btnAnasayfa"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/anasayfa"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights,SmallSp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/btnOkurEkle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/add_user"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/okur_ekle"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/btnKitapEkle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/book_add"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/kitap_ekle"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/btnDuyuruEkle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notice"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/duyuru_ekle"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>